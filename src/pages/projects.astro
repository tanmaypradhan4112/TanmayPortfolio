    url="https://illuminate2k23.netlify.app/"
    badge="Contribution"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="REDI Hackathon"
    img="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse2.mm.bing.net%2Fth%3Fid%3DOIP.B5969CAAxWIssvUAQpyZSAHaEK%26pid%3DApi&f=1&ipt=10491efb8f79d3ef25e4ea786b9502d25da45898b7baa1caf400a591822ac1f7&ipo=images"
