---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">
      Full Stack Developement Project
    </div>
  </div>

  <HorizontalCard
    title="People Archive Rural of India"
    img="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.mm.bing.net%2Fth%3Fid%3DOIP.91JNx9XuGUNEyOvWUOr_-AAAAA%26pid%3DApi&f=1&ipt=c9b123af820e3e41a816eb95f3d5cfa566d4f9d85b744b0c0285b4d8177183cd&ipo=images"
    desc="Revamped the People Archive Rural Of India (PARI) using ReactJS and TailwindCSS"
    url="https://beta.ruralindiaonline.org/"
    badge="Internship"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Illuminate 2023"
    img="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fi.ytimg.com%2Fvi%2FrnAOLeZMY_g%2Fmaxresdefault.jpg&f=1&nofb=1&ipt=76421581c29dfb76a0295f41f55689f319643fee73cd7d99cd529471cc422d1d&ipo=images"
