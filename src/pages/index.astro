---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Tanmay Pradhan</div>
    <div class="text-3xl py-3 font-bold">Undergraduate in Computer Science(AI & ML)</div>
    <div class="py-2">
      <text class="text-lg">
        I love to explore about Technology mainly focus on Artificial Intelligence and Machine Learning. I support FOSS and love to contribute towards it.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://linktr.ee/tanmaypradhan_" target="_blank"> Let's connect!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="People Archive Rural of India"
    img="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.mm.bing.net%2Fth%3Fid%3DOIP.91JNx9XuGUNEyOvWUOr_-AAAAA%26pid%3DApi&f=1&ipt=c9b123af820e3e41a816eb95f3d5cfa566d4f9d85b744b0c0285b4d8177183cd&ipo=images"
    desc="Revamped the People Archive Rural Of India (PARI) using ReactJS and TailwindCSS"
    url="https://beta.ruralindiaonline.org/childrens-paintings/1"
    badge="Internship"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Face Detection using Haar Cascade"
    img="https://media.licdn.com/dms/image/D5622AQF7VoLBGBJBdw/feedshare-shrink_800/0/1690376434010?e=1694044800&v=beta&t=B0G_gLfsP181DUsHJpf5UW2A2FzOyc8Y9z5ZtSajlN4"
    desc="Face Detection task is accomplished using a pre-trained model called Haar Cascade, which is natively provided by the OpenCV library"
    url="https://github.com/tanmaypradhan4112/opencv-Face-Detection"
    badge="New"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Alien Invasion"
    img="https://raw.githubusercontent.com/tanmaypradhan4112/Alien-Invasion/main/img/alien_invasion.png"
    desc="Build a shooting game called Alien Invasion using Pygame and Sprite"
    badge="Personal"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
